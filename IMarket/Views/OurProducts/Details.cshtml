@model IMarket.Models.Db.Product

@{
    ViewBag.Title = $"{Model.Name}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 
<div class="panel panel-info">
    <div class="panel-heading">@Model.Name</div>
    <div class="panel panel-body">
        <div class="row">
            
            <div class="col-lg-4">
                <div>Name</div>
                <div>@Model.Name</div>
            </div>
            <div class="col-lg-4">
                <div>Price</div>
                <div>@Model.Price</div>
            </div>
            
            
            <div class="col-lg-4">
                <div>Model</div>
                <div>@Model.Model</div>
            </div>

            <div class="col-lg-12">
                <div>Description</div>
                <div>@Model.Description</div>
            </div>
            
            
            

        </div>
    </div>
</div>

<div class="panel panel-info">
    <div class="panel-heading">Send Request</div>
@using (@Html.BeginForm("Request","OurProducts",FormMethod.Post))
{
    if (@TempData["Requests"]!=null)
    {
        <div class="alert alert-success">@TempData["Requests"]</div>
    }
    <div class="panel panel-body">

            <input type="hidden" name="ProductId" value="@Model.Id" />
                                                                   
            <textarea class="form-control" name="Msg" cols="2" role="2" placeholder="Please Enter you Message"></textarea>
      
    </div>
    <div class="panel-footer">
        <input type="submit"  value="Save" class="btn btn-success"/>
       
    </div>
}
</div>